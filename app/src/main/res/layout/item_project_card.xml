<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    style="@style/Base.Theme.ProjectTrackerChallenge">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Judul -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:text="@string/project_title"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:maxLines="1"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Badge status -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/badgeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/status_inprogress_bg"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintBaseline_toBaselineOf="@id/tvTitle"
            app:layout_constraintStart_toEndOf="@id/tvTitle"
            android:layout_marginStart="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp">

                <View
                    android:id="@+id/statusDot"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/circle_orange" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tag_status"
                    android:textColor="@color/brand_onPrimary"
                    android:textSize="11sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/groupActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flow_wrapMode="aligned"
            app:flow_horizontalStyle="packed"
            app:constraint_referenced_ids="btnAddTask,btnEdit,btnExpand"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/btnAddTask"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/circle_button_bg"
            android:padding="6dp"
            android:src="@drawable/ic_add"
            android:tint="@color/accent_primary_on"
            app:layout_constraintEnd_toStartOf="@+id/btnEdit"
            app:layout_constraintStart_toStartOf="@+id/groupActions"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_edit"
            android:background="@drawable/circle_button_bg"
            android:padding="6dp"
            app:tint="@color/icon_muted"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/btnExpand"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_expand_more"
            android:background="@drawable/circle_button_bg"
            android:padding="6dp"
            android:tint="@color/accent_primary_on"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="UseAppTint" />

        <!-- Progress bar -->
        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="200dp"
            android:layout_height="8dp"
            android:progress="33"
            android:progressDrawable="@drawable/progress_bar_green"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="22dp"/>

        <!-- Info -->
        <TextView
            android:id="@+id/tvMeta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sub_title_task"
            android:textColor="@color/text_muted"
            android:textSize="13sp"
            app:layout_constraintTop_toBottomOf="@id/progress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvPercent"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progress_percentage"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/progress"
            app:layout_constraintStart_toEndOf="@+id/progress"
            app:layout_constraintTop_toTopOf="@+id/progress" />

        <!-- Expand section -->
        <LinearLayout
            android:id="@+id/sectionTasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvMeta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/sectionTasks"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
